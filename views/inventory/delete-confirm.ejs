<%# Unit 5, Activities %>

<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
  
  <%- messages() %>
  
  <% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
  <%  }) %>
  </ul>
  <% } %>
  <p>Confirm Deletion - The delete is permanent.</p>
  <form action="/inv/delete" method="post" id="deleteForm">
    <label for="invMake">Make:</label><br>
    <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make %>" readonly><br>
    <label for="invModel">Model:</label><br>
    <input type="text" id="invModel" name="inv_model" required value="<%= locals.inv_model %>" readonly><br>
    <label for="invYear">Year:</label><br>
    <input type="number" id="invYear" name="inv_year" required min="1900" max="2024" step="1" value="<%= locals.inv_year %>" readonly><br>
    <label for="invPrice">Price:</label><br>
    <input type="number" id="invPrice" name="inv_price" required min="1" value="<%= locals.inv_price %>" readonly><br>
    <input type="submit" name="submit" value="Delete Vehicle" id="submit">
    <input type="hidden" name="inv_id"
      <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
      <% } %>>  
  </form>